<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MasInfoEgresos">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Titulo_EgresoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compra"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/editText_NomProv_EgresoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nombre Proveedor"
            android:inputType="numberDecimal" />

        <Spinner
            android:id="@+id/spinner_Tipo_EgresoInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editText_Fecha_EgresoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:hint="Fecha"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_Monto_EgresoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Monto"
            android:inputType="numberDecimal" />

        <EditText
            android:id="@+id/editText_Detalle_EgresoInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Detalle"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/button_Update_EgresoInfo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="Actualizar"
            android:textAllCaps="false"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_Eliminar_EgresoInfo"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="20dp"
            android:text="Borrar"
            android:textAllCaps="false"
            android:textSize="20sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>