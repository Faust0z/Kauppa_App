<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/textView_Titulo_Ingreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Ingreso"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

    <Spinner
        android:id="@+id/spinner_Tipo_Ingreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editText_Fecha_Ingreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/editText_NomCliente_Ingreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Nombre del Cliente"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="154dp"
        android:background="@color/material_dynamic_tertiary60">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_SubituloProd_ProdsIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Producto"
                    android:layout_marginRight="60dp"/>

                <TextView
                    android:id="@+id/textView_SubituloPrecio_ProdsIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Precio"
                    android:layout_marginRight="60dp"/>


                <TextView
                    android:id="@+id/textView_SubituloCant_ProdsIngreso"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cantidad" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recView_ProdsIngreso"
                android:layout_width="match_parent"
                android:layout_height="fill_parent" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/button_AddProdPerso_Ingreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="Agregar Producto personalizado" />

    <Button
        android:id="@+id/button_AddProdStock_Ingreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="true"
        android:text="Agregar Producto en stock" />

    <EditText
        android:id="@+id/editText_Detalle_Ingreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Detalle"
        android:gravity="center"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textView_Total_Ingreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Campo para cálculo automático del total"
        android:textSize="18sp"
        android:layout_marginBottom="16dp"
        android:gravity="center" />

</LinearLayout>
