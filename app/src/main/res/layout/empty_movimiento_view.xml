<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/empty_movimiento_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/empty_movimiento_image"
        android:layout_width="130dp"
        android:layout_height="130dp"

        android:src="@drawable/undraw_empty_re_opql">
    </ImageView>

    <TextView
        android:id="@+id/empty_movimiento_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ooops! No hay nada."
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="16dp">
    </TextView>

    <TextView
        android:id="@+id/empty_movimiento_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parece que no hay movimientos aun."
        android:textStyle="normal"
        android:textSize="13sp">
    </TextView>

</LinearLayout>