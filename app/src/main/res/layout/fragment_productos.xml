<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProductosFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_Titulo_Productos"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|center_horizontal"
            android:text="Productos" />

        <LinearLayout
            android:id="@+id/layout_textViewsProd"
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_total_Prods"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:text="Total Prods:" />

                <TextView
                    android:id="@+id/textView_totalCant_Prods"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:text="N°" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_StkBajo_Prods"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:text="Bajos en stock:" />

                <TextView
                    android:id="@+id/textView_StkBajoCant_Prods"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:text="N°" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView_SinStk_Prods"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Sin stock:" />

                <TextView
                    android:id="@+id/textView_SinStkCant_Prods"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center|center_horizontal"
                    android:layout_weight="1"
                    android:gravity="center|center_horizontal"
                    android:text="N°" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/button_Filtrar_Prods"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:background="?android:attr/selectableItemBackground"
            android:hint="filtrar (por nombre)"
            android:stateListAnimator="@null"
            android:visibility="gone" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="360dp"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recView_Prods"
                    android:layout_width="360dp"
                    android:layout_height="wrap_content"
                    tools:listitem="" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/floatButton_add_Prods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</FrameLayout>