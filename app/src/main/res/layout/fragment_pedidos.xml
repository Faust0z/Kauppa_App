<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PedidosFragment"
    android:background="@color/md_theme_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="36dp"
        android:padding="32dp">

        <!-- Título -->
        <TextView
            android:id="@+id/textView_Titulo_Pedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pedidos"
            android:textStyle="bold"
            android:textSize="30sp">
        </TextView>

        <!-- Descripción -->
        <TextView
            android:id="@+id/textView_Descripcion_Pedidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visualiza y gestiona todos tus pedidos de manera eficiente. Mantén un seguimiento claro del estado y la información de cada pedido."
            android:textSize="14sp"
            android:layout_marginBottom="16dp">
        </TextView>

        <LinearLayout
            android:id="@+id/linearLayout_estadisticas_Prods"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <!-- Card - Ordenes Totales -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/md_theme_onSecondaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView_totalCant_Pdid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="185"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_inverseOnSurface"
                            android:textIsSelectable="true">
                        </TextView>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Totales"
                            android:textSize="11sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/orders_24px"
                        app:tint="@color/md_theme_inverseOnSurface"
                        android:contentDescription="package icon">
                    </ImageView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card - Ordenes Pendientes -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                app:cardBackgroundColor="@color/md_theme_outline_mediumContrast"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView_PendientesCant_Pdid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_inverseOnSurface"
                            android:textIsSelectable="true"
                            android:layout_weight="1">
                        </TextView>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pendientes"
                            android:textSize="11sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/deployed_code_history_24px"
                        app:tint="@color/md_theme_inverseOnSurface"
                        android:contentDescription="package icon">
                    </ImageView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Card - Ordenes Listas -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                android:layout_marginLeft="4dp"
                app:cardBackgroundColor="@color/md_theme_outline_mediumContrast"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView_ListosCant_Pdid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_inverseOnSurface"
                            android:textIsSelectable="true"
                            android:layout_weight="1">
                        </TextView>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Listos"
                            android:textSize="11sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_marginTop="2dp"
                        android:src="@drawable/check_circle_24px"
                        app:tint="@color/md_theme_inverseOnSurface"
                        android:contentDescription="package icon">
                    </ImageView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="16dp"
            app:dividerColor="@color/md_theme_outline">
        </com.google.android.material.divider.MaterialDivider>

        <!-- Lista de Productos -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recView_Pedidos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            tools:listitem="">
        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatButton_add_Pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_layout"
        app:layout_constraintEnd_toEndOf="@+id/frame_layout"
        app:srcCompat="@drawable/add_24px" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_layout"
        app:layout_constraintEnd_toEndOf="@+id/frame_layout"
        app:srcCompat="@drawable/filter_alt_24px"
        android:focusable="false"
        android:clickable="false" />

    <Button
        android:id="@+id/button_Filtrar_Pedidos"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_layout"
        app:layout_constraintEnd_toEndOf="@+id/frame_layout"
        android:background="?android:attr/selectableItemBackground"
        android:hint="filtrar"
        android:stateListAnimator="@null" />

</FrameLayout>