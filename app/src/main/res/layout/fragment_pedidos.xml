<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.PedidosFragment"
    android:background="@color/material_dynamic_tertiary90">

    <Button
        android:id="@+id/button_Filtrar_Pedidos"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:background="?android:attr/selectableItemBackground"
        android:hint="filtrar"
        android:stateListAnimator="@null" />

    <LinearLayout
        android:id="@+id/layout_textViewsPdid"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_total_Pdid"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:text="Total Pedidos:" />

            <TextView
                android:id="@+id/textView_totalCant_Pdid"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:text="N°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Pendientes_Pdid"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:text="Pendientes:" />

            <TextView
                android:id="@+id/textView_PendientesCant_Pdid"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:text="N°" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_Listos_Pdid"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Listos:" />

            <TextView
                android:id="@+id/textView_ListosCant_Pdid"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:layout_gravity="center|center_horizontal"
                android:layout_weight="1"
                android:gravity="center|center_horizontal"
                android:text="N°" />
        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recView_Pedidos"
        android:layout_width="match_parent"
        android:layout_height="643dp"
        android:layout_gravity="bottom"
        tools:listitem="" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatButton_add_Pedidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_layout"
        app:layout_constraintEnd_toEndOf="@+id/frame_layout"
        app:srcCompat="@drawable/baseline_add_24" />
</FrameLayout>