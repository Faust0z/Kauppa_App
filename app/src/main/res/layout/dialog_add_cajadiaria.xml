<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:paddingHorizontal="32dp"
    android:gravity="left">

    <TextView
        android:id="@+id/textView_Titulo_CajaDiaria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar Entrada"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:gravity="center" />

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="110dp"
        android:layout_height="3dp"
        android:layout_marginBottom="16dp">
    </com.google.android.material.divider.MaterialDivider>

    <!-- Input Layout - Monto  -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <!-- Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_Monto_CajaDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Monto"
            android:inputType="numberDecimal"
            android:drawableStart="@drawable/attach_money_bold_24px"
            android:drawablePadding="16dp">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Input Layout - Detalle  -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <!-- Input -->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editText_Detalle_CajaDiaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Detalle"
            android:inputType="textMultiLine"
            android:drawableStart="@drawable/sticky_note_2_24px"
            android:drawablePadding="16dp">
        </com.google.android.material.textfield.TextInputEditText>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="32dp">
    </com.google.android.material.divider.MaterialDivider>

    <RadioGroup
        android:id="@+id/radGroup_Tipo_CajaDiaria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?attr/selectableItemBackground"
        android:layout_marginHorizontal="60dp">

        <RadioButton
            android:id="@+id/radButton_Entrada_CajaDiaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Entrada"
            android:layout_weight="0.5">
        </RadioButton>

        <RadioButton
            android:id="@+id/radButton_Salida_CajaDiaria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salida"
            android:layout_weight="0.6">
        </RadioButton>

    </RadioGroup>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginHorizontal="32dp">
    </com.google.android.material.divider.MaterialDivider>

</LinearLayout>