<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.BalGnralFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="36dp"
            android:padding="32dp">

            <!-- Título -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance General"
                android:textStyle="bold"
                android:textSize="30sp">
            </TextView>

            <!-- Descripción -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gestiona tus ingresos y gastos generales fácilmente. Visualiza tu flujo de efectivo de forma sencilla."
                android:textSize="14sp"
                android:layout_marginBottom="16dp">
            </TextView>

            <!-- Card - Cantidad Productos -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="1dp"
                app:cardBackgroundColor="@color/md_theme_onSecondaryContainer">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/textView_TotalCant_BalGnral"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$24.000"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/md_theme_inverseOnSurface"
                            android:textIsSelectable="true"
                            android:layout_weight="1">
                        </TextView>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Balance Total"
                            android:textSize="14sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/payments_24px"
                        app:tint="@color/md_theme_inverseOnSurface"
                        android:contentDescription="package icon">
                    </ImageView>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Card - Cantidad Productos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/md_theme_outline_mediumContrast">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView_IngresosCant_Balgnral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$32.000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_inverseOnSurface"
                                android:textIsSelectable="true"
                                android:layout_weight="1">
                            </TextView>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/south_west_24px"
                                app:tint="@color/md_theme_inverseOnSurface"
                                android:contentDescription="package icon">
                            </ImageView>

                        </LinearLayout>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ingresos"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Card - Cantidad Productos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/md_theme_outline_mediumContrast">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView_EgresosCant_Balgnral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$8.000"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_inverseOnSurface"
                                android:textIsSelectable="true"
                                android:layout_weight="1">
                            </TextView>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/north_east_24px"
                                app:tint="@color/md_theme_inverseOnSurface"
                                android:contentDescription="package icon">
                            </ImageView>

                        </LinearLayout>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Egresos"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="4dp">

                <!-- Card - Cantidad Productos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:layout_marginRight="2dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/md_theme_outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView_PdidoPndienCant_Balgnral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="12"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_inverseOnSurface"
                                android:textIsSelectable="true"
                                android:layout_weight="1">
                            </TextView>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/orders_24px"
                                app:tint="@color/md_theme_inverseOnSurface"
                                android:contentDescription="package icon">
                            </ImageView>

                        </LinearLayout>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pedidos Pendientes"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Card - Cantidad Productos -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="2dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="1dp"
                    app:cardBackgroundColor="@color/md_theme_outline">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView_ProdBajoStockCant_Balgnral"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textSize="14sp"
                                android:textStyle="bold"
                                android:textColor="@color/md_theme_inverseOnSurface"
                                android:textIsSelectable="true"
                                android:layout_weight="1">
                            </TextView>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/package_2_24px"
                                app:tint="@color/md_theme_inverseOnSurface"
                                android:contentDescription="package icon">
                            </ImageView>

                        </LinearLayout>

                        <!-- Card - Titulo  -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Bajo Stock"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            android:textColor="@color/md_theme_inverseOnSurface">
                        </TextView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="12dp"
                app:dividerColor="@color/md_theme_outline">
            </com.google.android.material.divider.MaterialDivider>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recView_BalGnral"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:listitem="">
            </androidx.recyclerview.widget.RecyclerView>

            <include
                android:id="@+id/empty_movimiento_view"
                layout="@layout/empty_movimiento_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
            </include>

        </LinearLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_layout"
        app:layout_constraintEnd_toEndOf="@+id/frame_layout"
        app:srcCompat="@drawable/filter_alt_24px"
        android:focusable="false"
        android:clickable="false" />

    <Button
        android:id="@+id/button_Filtrar_BalGnral"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="85dp"
        app:layout_constraintBottom_toBottomOf="@+id/frame_layout"
        app:layout_constraintEnd_toEndOf="@+id/frame_layout"
        android:background="?android:attr/selectableItemBackground"
        android:hint="filtrar"
        android:stateListAnimator="@null" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_RepDispon_BalGnral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/analytics_24px"
        android:contentDescription="boton ver estadisticas">
    </com.google.android.material.floatingactionbutton.FloatingActionButton>

</FrameLayout>